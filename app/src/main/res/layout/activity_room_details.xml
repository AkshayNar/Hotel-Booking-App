<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".l.Users.RoomDetailsActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/book_room">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/image_card_view"
                android:layout_marginVertical="15dp"
                android:layout_width="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/room_image_details"
                    android:layout_width="250dp"
                    android:layout_height="300dp"
                    android:src="@drawable/loading"
                    android:layout_centerHorizontal="true"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Room_name_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_card_view"
                android:layout_marginHorizontal="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/room_name_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="8dp"
                        android:text="Room Name"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/room_price_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/room_name_details"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/room_price_double"
                        android:text="Original Price"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/room_price_line_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/room_name_details"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/room_price_double"
                        android:text=" ------   "
                        android:textColor="#403F3F"
                        android:textSize="18sp"
                        android:visibility="gone"/>



                    <TextView
                        android:id="@+id/room_offer_price_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/room_name_details"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/room_price_line_details"
                        android:text="offer Price"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/room_price_double"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/room_name_details"
                        android:layout_marginStart="20dp"
                        android:text="Rs. "
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        />


                    <TextView
                        android:id="@+id/percent_off_double"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/room_name_details"
                        android:layout_toRightOf="@+id/room_offer_price_details"
                        android:layout_marginStart="30dp"
                        android:text="off"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:visibility="gone"
                        />





                    <!--<TextView
                        android:id="@+id/room_quantity_required"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/room_price_double"
                        android:text="No. of Days "
                        android:textColor="#404040"
                        android:textSize="18sp"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold" />-->



                    <!--<com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                        android:id="@+id/number_btn"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/product_price_double"
                        android:layout_toRightOf="@+id/product_quantity_required"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="10dp"
                        app:finalNumber="10"
                        app:initialNumber="1"
                        app:textSize="8dp"
                        >

                    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>-->

                </RelativeLayout>

            </androidx.cardview.widget.CardView>





            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Room_name_card_view"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Room_description_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:text="Description"
                        android:textColor="#706F6F"
                        android:textSize="18sp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/Room_description_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_below="@+id/Room_description_txt"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="7dp"
                        android:text="Room Description"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"

                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>





            <TextView
                android:id="@+id/product_from_same_seller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="You Can add products in Cart From Same seller."
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_light"
                android:textSize="15sp"
                android:visibility="gone" />


        </RelativeLayout>


    </ScrollView>



    <Button
        android:elevation="10dp"
        android:id="@+id/book_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Book Now"
        android:textColor="@android:color/white"/>

</RelativeLayout>