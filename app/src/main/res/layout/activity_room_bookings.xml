<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".l.Admin.RoomBookingsActivity">


    <RelativeLayout
        android:id="@+id/date_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/search_by_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search by date"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#070707"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/welcome_user_txt"
        android:layout_marginTop="25dp"
        android:layout_alignStart="@+id/welcome_user_txt"/>





    <EditText
        android:id="@+id/date_field_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:layout_toRightOf="@+id/search_by_date"
        android:hint="Date"
        android:textColorHint="#A6A6A6"/>


</RelativeLayout>



    <TextView
        android:id="@+id/no_bookings_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Bookings on this Date"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/booking_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/date_relative">
    </androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>