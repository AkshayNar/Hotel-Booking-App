<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginVertical="2dp"
        android:elevation="10dp"

        >
        <RelativeLayout
            android:id="@+id/room_list_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <ImageView
                android:id="@+id/admin_room_image"
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp"
                />

            <TextView
                android:id="@+id/room_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category Name"
                android:textSize="13dp"
                android:layout_marginTop="7dp"
                android:textStyle="bold"
                android:layout_below="@+id/admin_room_image"
                android:textColor="@android:color/black"
                android:layout_alignStart="@+id/admin_room_image"
                android:layout_marginBottom="8dp"/>


            <TextView
                android:id="@+id/rs_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. "
                android:textSize="13dp"
                android:layout_below="@+id/room_title_txt"
                android:textColor="@android:color/black"
                android:layout_alignStart="@+id/room_title_txt"
                android:layout_marginBottom="8dp"/>


            <TextView
                android:id="@+id/price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="13dp"
                android:layout_below="@+id/room_title_txt"
                android:layout_toRightOf="@+id/rs_txt"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>


            <TextView
                android:id="@+id/crossline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="         ------  "
                android:layout_below="@+id/room_title_txt"
                android:textColor="@android:color/black"
                android:layout_alignStart="@+id/room_title_txt"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/discount_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="offerPrice"
                android:textSize="13dp"
                android:layout_below="@+id/room_title_txt"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@+id/price_txt"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                />



            <TextView
                android:id="@+id/off_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Off"
                android:textSize="13dp"
                android:textColor="@android:color/black"
                android:layout_alignEnd="@+id/admin_room_image"
                android:layout_below="@+id/room_title_txt"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                />


            <TextView
                android:id="@+id/status_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status"
                android:textSize="13dp"
                android:textColor="#008A0F"
                android:layout_below="@+id/price_txt"
                android:layout_alignStart="@+id/room_title_txt"
                android:layout_marginBottom="8dp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>